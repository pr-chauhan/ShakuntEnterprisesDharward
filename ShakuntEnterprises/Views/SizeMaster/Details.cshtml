@model ShakuntEnterprises.ViewModels.SizeMasterModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_Views.cshtml";
}
<hr />
<h3>Add SizeMaster</h3>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Details" disabled="disabled">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h4>Welding Material</h4>
            <div class="row">
                <div class="form-group" style="width:20%;display: inline-block;">
                    <label asp-for="Size" class="control-label"></label>
                    <input asp-for="Size" class="form-control" />
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>
            </div>
            <h4>Welding Condition</h4>
            <div class="row">
                <div class="form-group" style="width:20%;display: inline-block;">
                    <label asp-for="Apms" class="control-label"></label>
                    <input asp-for="Apms" class="form-control" />
                    <span asp-validation-for="Apms" class="text-danger"></span>
                </div>
                <div class="form-group" style="width:20%;display: inline-block;">
                    <label asp-for="Volts" class="control-label"></label>
                    <input asp-for="Volts" class="form-control" />
                    <span asp-validation-for="Volts" class="text-danger"></span>
                </div>
                <div class="form-group" style="width:20%;display: inline-block;">
                    <label asp-for="TravelSpeed" class="control-label"></label>
                    <input asp-for="TravelSpeed" class="form-control" />
                    <span asp-validation-for="TravelSpeed" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group" style="display:none;">
                <label asp-for="CreatedDate" class="control-label"></label>
                <input asp-for="CreatedDate" class="form-control" type="datetime" readonly value=@ViewBag.CDT />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none;">
                <label asp-for="CreatedBy" class="control-label"></label>
                <input asp-for="CreatedBy" class="form-control" readonly="readonly" value=@Context.Session.GetString("lid") />
                <span asp-validation-for="CreatedBy" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>
