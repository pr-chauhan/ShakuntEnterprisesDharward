@model UserMaster
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>@ViewData["Title"] - Cloud-CRM</title>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
  <!-- endinject -->
  <link rel="shortcut icon" href="~/images/favicon.png" />
<div class="text-center" style="margin:auto;padding-top:10%;">
    @*<h1 class="display-1" style="font-size:2em;color:#0a1e8f;">Login</h1>*@
    <img src="~/images/crm-icon.jpg" width="100px" />
    <div style="width:30%;margin:auto;padding-left:10px;">
        <p>
            <div class="row">
                <div class="col-md-8" style="margin:auto;">
                    <form asp-action="IndexHome">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            @*<label asp-for="user_id" class="control-label"></label>*@

                            <input asp-for="UserId" class="form-control" placeholder="Enrer User Id" />
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @*<label asp-for="user_password" class="control-label"></label>*@
                            <input asp-for="UserPassword" type="password" class="form-control" placeholder="Enter Password" />
                            <span asp-validation-for="UserPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" style="width:100%" value="Login" class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="IndexHome" />
                        </div>
                    </form>
                </div>
            </div>

        </p>
    </div>
    <div style="width:30%;margin:auto;padding-left:10px;">

    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>