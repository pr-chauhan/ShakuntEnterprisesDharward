<div>
    <div class="text-center" style="width:30%;margin:auto;padding-top:10%;float:left;height:auto;">
        <img src="~/images/ses-logo-medium.png" width="100px" />
        <div class="card-people mt-auto">
            <div class="row">
                <div class="col-md-8" style="margin:auto;">
                    <form asp-action="IndexHome">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="UserId" class="form-control" placeholder="Enrer User Id" />
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input asp-for="UserPassword" type="password" class="form-control" placeholder="Enter Password" />
                            <span asp-validation-for="UserPassword" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="submit" style="width:100%" value="Login" class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="IndexHome" />
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
    <div class="text-center" style="width:70%;margin:auto;float:right;height:auto;">
        <img src="~/images/dwd-plant-pic-03-rotated.jpeg" width="100%" />
    </div>

</div>
 
